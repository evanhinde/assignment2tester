<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment2tester.DraftController">
   <children>
      <HBox layoutY="-1.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox prefHeight="400.0" prefWidth="186.0">
               <children>
                  <ListView fx:id="leagueListView" prefHeight="243.0" prefWidth="186.0" />
                  <Label alignment="CENTER" prefHeight="61.0" prefWidth="185.0" text="Add Player To League" />
                  <Label prefHeight="17.0" prefWidth="190.0" text="First Name" />
                  <TextField fx:id="firstNameTextField" />
                  <Label prefHeight="17.0" prefWidth="185.0" text="Last Name" />
                  <TextField fx:id="lastNameTextFIeld" />
                  <Label prefHeight="17.0" prefWidth="190.0" text="Position" />
                  <ChoiceBox fx:id="positionsChoiceBox" prefHeight="26.0" prefWidth="186.0" />
                  <Button fx:id="addToLeagueButton" mnemonicParsing="false" onAction="#addToLeague" prefHeight="26.0" prefWidth="185.0" text="Add" />
               </children>
            </VBox>
            <VBox prefHeight="400.0" prefWidth="211.0">
               <children>
                  <Button fx:id="addToTeamButton" mnemonicParsing="false" onAction="#addToTeam" prefHeight="140.0" prefWidth="211.0" text="Add Player" />
                  <Button fx:id="removeFromTeamButton" mnemonicParsing="false" onAction="#removeFromTeam" prefHeight="139.0" prefWidth="211.0" text="Remove Player" />
               </children>
            </VBox>
            <VBox prefHeight="400.0" prefWidth="203.0">
               <children>
                  <Label alignment="CENTER" prefHeight="68.0" prefWidth="202.0" text="My Team" />
                  <ListView fx:id="teamListView" prefHeight="232.0" prefWidth="203.0" />
                  <Label prefHeight="46.0" prefWidth="203.0" text="Available Positions" />
                  <Label fx:id="availablePositionsLabel" prefHeight="45.0" prefWidth="205.0" text="Label" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
